{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/notify-all.py Bash PreToolUse"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/notify-all.py Edit PreToolUse"
          }
        ]
      },
      {
        "matcher": "Read|LS|Glob",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/notify-all.py Read PreToolUse"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/activity-logger.py %TOOL_NAME%"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/notify-all.py Stop Stop"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/notify-all.py SubagentStop SubagentStop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/config-manager/notify-all.py Notification Notification"
          }
        ]
      }
    ]
  }
}