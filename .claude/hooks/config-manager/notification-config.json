{
  "notifications": {
    "sound": {
      "enabled": true,
      "script": "voice-notifier/smart-notification.py",
      "volume": 100,
      "events": {
        "Stop": true,
        "Notification": true,
        "PreToolUse": true,
        "PostToolUse": false
      },
      "tools": {
        "_comment": "Tool-specific control: Use whitelist, blacklist, or custom settings per tool",
        "enabled": true,
        "whitelist": [],
        "blacklist": [],
        "custom": {
          "Bash": {"PreToolUse": true, "PostToolUse": false},
          "Edit": {"PreToolUse": true, "PostToolUse": false},
          "Read": {"PreToolUse": true, "PostToolUse": false},
          "Write": {"PreToolUse": true, "PostToolUse": false},
          "Grep": {"PreToolUse": false, "PostToolUse": false},
          "LS": {"PreToolUse": false, "PostToolUse": false},
          "Glob": {"PreToolUse": false, "PostToolUse": false}
        }
      },
      "_comment": "Sesli bildirimler - MP3 ve beep sesleri"
    },
    "telegram": {
      "enabled": true,
      "script": "telegram-bot/telegram-notifier.py",
      "events": {
        "Stop": true,
        "Notification": true,
        "SubagentStop": true,
        "PreToolUse": false,
        "PostToolUse": false
      },
      "_comment": "Telegram bot bildirimleri"
    },
    "desktop_toast": {
      "enabled": true,
      "script": "toast-notifier/cross-platform-notifier.py",
      "events": {
        "Stop": true,
        "Notification": true,
        "SubagentStop": true,
        "PreToolUse": false,
        "PostToolUse": false
      },
      "_comment": "Desktop notifications (Windows/Mac/Linux)"
    }
  },
  "quiet_hours": {
    "enabled": false,
    "start": "23:00",
    "end": "07:00",
    "mute": ["sound"],
    "allow": ["telegram", "desktop_toast"],
    "_comment": "mute: sessiz saatlerde kapatılacak plugin'ler, allow: her zaman çalışacak plugin'ler"
  },
  "logging": {
    "enabled": false,
    "max_size_mb": 10,
    "rotate": true,
    "_comment": "Debug için enabled: true yapın"
  },
  "culture": {
    "language": "en",
    "_comment": "Notification language: 'en' (English) or 'tr' (Türkçe)"
  }
}